<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/background_white_round_corner"
    android:elevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cat_food_image_frame"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_light_blue_left_round_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:background="@drawable/background_white_round_corner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cat_food_image_preview"
            app:layout_constraintStart_toStartOf="@+id/cat_food_image_preview"
            app:layout_constraintTop_toBottomOf="@+id/cat_food_image_preview">

            <TextView
                android:id="@+id/cat_food_rating_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:text="4.5"
                app:layout_constraintBottom_toBottomOf="@+id/cat_food_star_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cat_food_star_image"
                app:layout_constraintTop_toTopOf="@+id/cat_food_star_image" />

            <ImageView
                android:id="@+id/cat_food_star_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_rating_star"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/cat_food_image_preview"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_example"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/cat_food_add_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/background_green_plus_button"
        android:text="+"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cat_food_nama_makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="NAMA MAKANAN"
        android:textColor="@color/green_dark"
        app:layout_constraintStart_toEndOf="@+id/cat_food_image_frame"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cat_food_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="12 Porsi"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/cat_food_nama_makanan"
        app:layout_constraintTop_toBottomOf="@+id/cat_food_alamat" />

    <TextView
        android:id="@+id/cat_food_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/montserrat"
        android:text="Gratis Ongkir"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/cat_food_quantity"
        app:layout_constraintTop_toBottomOf="@+id/cat_food_alamat" />

    <TextView
        android:id="@+id/cat_food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Rp.10.000"
        android:textColor="@color/green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cat_food_nama_makanan"
        app:layout_constraintTop_toBottomOf="@+id/cat_food_quantity" />

    <TextView
        android:id="@+id/cat_food_alamat"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="RM Padang Ma..."
        android:textColor="@color/green_dark"
        app:layout_constraintStart_toStartOf="@+id/cat_food_nama_makanan"
        app:layout_constraintTop_toBottomOf="@+id/cat_food_nama_makanan" />

    <TextView
        android:id="@+id/cat_food_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/poppins_regular"
        android:text="300 m"
        android:textColor="@color/green_dark"
        app:layout_constraintBottom_toBottomOf="@+id/cat_food_price"
        app:layout_constraintEnd_toEndOf="@+id/cat_food_add_button"
        app:layout_constraintTop_toTopOf="@+id/cat_food_price" />

</androidx.constraintlayout.widget.ConstraintLayout>